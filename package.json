{
  "name": "Twake",
  "productName": "Twake",
  "version": "1.2.50",
  "author": "Twake",
  "description": "Twake",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "dist-w": "electron-builder -w",
    "rebuild": "$(npm bin)/electron-rebuild"
  },
  "devDependencies": {
    "build-electron-app": "github:j-f1/build-electron-app",
    "copyfiles": "~1.0.0",
    "electron": "^7.1.5",
    "electron-builder": "^22.2.0",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-log": "^4.0.0",
    "electron-packager": "^14.0.4",
    "electron-rebuild": "^1.8.6",
    "fs-extra": "^10.0.0",
    "live-reload": "~1.1.0",
    "mkdirp": "~0.5.1",
    "npm-run-all": "~2.3.0",
    "rimraf": "~2.5.3"
  },
  "dependencies": {
    "copyfiles": "~1.0.0",
    "dotenv": "^8.1.0",
    "electron-dl": "^1.14.0",
    "electron-localshortcut": "^3.1.0",
    "electron-notarize": "^0.1.1",
    "electron-osx-sign": "^0.4.12",
    "electron-prompt": "^1.4.0",
    "electron-store": "^2.0.0",
    "electron-updater": "4.4.0",
    "electronify-server": "^0.6.2",
    "live-reload": "~1.1.0",
    "mkdirp": "~0.5.1",
    "npm-run-all": "~2.3.0",
    "remote": "^0.2.6",
    "rimraf": "~2.5.3"
  },
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "afterSign": "notarize.js",
    "files": [
      "webview-ipc.js",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "style.css"
    ],
    "asar": true,
    "appId": "com.twake.twakeapp",
    "artifactName": "Setup_Twake_lastest.${ext}",
    "directories": {
      "output": "dist/build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/mac/icon.icns",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "target": [
        "pkg",
        "dmg",
        "zip"
      ]
    },
    "mas": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/mac/icon.icns",
      "entitlements": "entitlements.mas.plist",
      "entitlementsInherit": "entitlements.mas.plist",
      "type": "distribution"
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        {
         "target": "nsis",
         "arch": [
           "x64"
         ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/png"
    },
    "dmg": {
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://update.twakeapp.com"
      }
    ]
  }
}
