{
  "name": "Twake",
  "productName": "Twake",
  "version": "1.2.50",
  "author": "Twake",
  "description": "Twake",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "dist-w": "electron-builder -w",
    "dist-l": "electron-builder -l",
    "rebuild": "$(npm bin)/electron-rebuild"
  },
  "devDependencies": {
    "build-electron-app": "^0.2.0",
    "copyfiles": "^2.4.1",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-log": "^4.3.5",
    "electron-packager": "^15.3.0",
    "electron-rebuild": "^2.3.5",
    "fs-extra": "^10.0.0",
    "live-reload": "^1.1.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "electron-dl": "^3.2.1",
    "electron-localshortcut": "^3.2.1",
    "electron-notarize": "^1.0.0",
    "electron-osx-sign": "^0.5.0",
    "electron-prompt": "^1.6.2",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "electronify-server": "^0.6.2",
    "node": "^16.5.0",
    "remote": "^0.2.6"
  },
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "afterSign": "notarize.js",
    "files": [
      "webview-ipc.js",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "style.css"
    ],
    "asar": true,
    "appId": "com.twake.twakeapp",
    "artifactName": "Setup_Twake_lastest.${ext}",
    "directories": {
      "output": "dist/build"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/mac/icon.icns",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "target": [
        "pkg",
        "dmg",
        "zip"
      ]
    },
    "mas": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/mac/icon.icns",
      "entitlements": "entitlements.mas.plist",
      "entitlementsInherit": "entitlements.mas.plist",
      "type": "distribution"
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/png"
    },
    "dmg": {
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://update.twakeapp.com"
      }
    ]
  }
}
